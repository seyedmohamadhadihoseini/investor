generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Person {
  id          String  @id @default(uuid())
  nationalId  String  @unique
  FullName    String
  phoneNumber String?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  parentReferrerId String?
  parentReferrer   Person?       @relation(name: "ReferrerPerson", fields: [parentReferrerId], references: [nationalId])
  investments      Contract[]    @relation("InvestorContracts")
  referrers        Person[]      @relation(name: "ReferrerPerson")
  bankAccounts     BankAccount[]
}

model Contract {
  id                   String         @id @default(uuid())
  investorId           String
  investor             Person         @relation("InvestorContracts", fields: [investorId], references: [id])
  contractStartDate    DateTime
  contractEndDate      DateTime
  contractType         String
  contractProfitPeriod Int
  investmentAmount     Float
  profitPercentage     Float
  referrerPercentage   Float?
  createdAt            DateTime       @default(now())
  updatedAt            DateTime       @updatedAt
  profitRecords        ProfitRecord[]
}

model ProfitRecord {
  id            String       @id @default(uuid())
  contractId    String
  contract      Contract     @relation(fields: [contractId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  profitAmount  Float
  paymentDate   DateTime
  isPaid        Boolean      @default(false)
  isForInvestor Boolean      @default(true)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  depositFile   DepositFile?
}

model DepositFile {
  id             Int          @id @default(autoincrement())
  profitRecordId String       @unique
  profitRecord   ProfitRecord @relation(fields: [profitRecordId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  month          String
  fileUrl        String
  uploadDate     DateTime     @default(now())
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

model BankAccount {
  number    String @id
  bank_name String
  person    Person @relation(references: [id], fields: [PersonId])
  PersonId  String
}
